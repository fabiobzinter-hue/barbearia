# Vince Barbearia Dashboard - Environment Variables
# Copy this file to .env.local and fill in your actual values

# n8n Integration
NEXT_PUBLIC_N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=your-n8n-api-key

# Google Calendar Integration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-oauth-client-id.googleusercontent.com
NEXT_PUBLIC_GOOGLE_API_KEY=your-google-api-key
NEXT_PUBLIC_GOOGLE_CALENDAR_ID=your-main-calendar-id@gmail.com

# Professional-specific calendars (optional)
NEXT_PUBLIC_JOAO_CALENDAR_ID=joao-calendar-id@gmail.com
NEXT_PUBLIC_CARLOS_CALENDAR_ID=carlos-calendar-id@gmail.com  
NEXT_PUBLIC_MIGUEL_CALENDAR_ID=miguel-calendar-id@gmail.com

# WhatsApp Business API (via n8n)
WHATSAPP_BUSINESS_PHONE_ID=your-whatsapp-business-phone-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token

# Database (if using external database)
DATABASE_URL=postgresql://username:password@localhost:5432/vince_barbearia
DATABASE_DIRECT_URL=postgresql://username:password@localhost:5432/vince_barbearia

# NextAuth (if implementing authentication)
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# External integrations
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Email service (for reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password